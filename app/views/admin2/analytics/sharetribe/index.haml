- content_for :title do
  = t('admin2.sidebar.analytics.sharetribe')

.content-card-header
  %h1.content-card-header-title
    = t('admin2.sidebar.analytics.sharetribe')

.content-card-section-container
  = form_for @current_community, url: update_sharetribe_admin2_analytics_sharetribe_index_path, html: { class: %i[content-card-section-form], remote: true }, method: :patch do |form|
    %section.content-card-section
      %h2
        = t('admin2.sidebar.analytics.sharetribe')
      %p.ingress
        = t('admin2.sharetribe.info_text', url: "#{knowledge_base_url}/how-to-disable-sharetribes-analytics").html_safe
      .form-group
        .form-check
          = form.check_box :end_user_analytics, class: %i[form-check-input]
          = form.label :end_user_analytics, t('admin2.sharetribe.end_user_analytics'), class: %i[form-check-label]
    %section.content-card-terminal
      = render 'admin2/submit_button', caption: t('admin2.save_changes')
